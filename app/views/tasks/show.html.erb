<h1><%= @task.title%></h1>
<h3><%= @task.details%></h3>

<% if @task.completed == true%>
  <p>This task is <strong>completed</strong>!</p>
<% else %>
  <p>This task is <strong>not completed</strong>!</p>
<% end %>

<hr>
<%= link_to "See tasks", tasks_path, class: "btn btn-secondary"%>
<%= link_to "Add a task", tasks_new_path, class: "btn btn-primary"%>
<%= link_to "Edit task", edit_task_path, class: "btn btn-warning"%>
<%= link_to "Delete task", task_path(@task), class:"btn btn-danger", method: "delete"%>